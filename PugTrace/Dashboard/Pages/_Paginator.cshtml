@* Generator: Template TypeVisibility: Internal GeneratePrettyNames: True TrimLeadingUnderscores : true *@
@using PugTrace.Dashboard
@inherits RazorPage<Pager>
<div class="btn-toolbar">
    @if (Model.TotalPageCount > 1)
    {
        <div class="btn-group paginator">
            @foreach (var page in Model.PagerItems)
            {
                switch (page.Type)
                {
                    case Pager.ItemType.Page:
                        @Html.Link(page.PageIndex.ToString(), Model.PageUrl(page.PageIndex), "btn btn-default", Model.CurrentPage == page.PageIndex)
                        break;
                    case Pager.ItemType.NextPage:
                        @Html.Link("Next", Model.PageUrl(page.PageIndex), "btn btn-default", isDisabled: Model.CurrentPage == page.PageIndex)
                        break;
                    case Pager.ItemType.PrevPage:
                        @Html.Link("Prev", Model.PageUrl(page.PageIndex), "btn btn-default", isDisabled: Model.CurrentPage == page.PageIndex)
                        break;
                    case Pager.ItemType.MorePage:
                        <a href="#" class="btn btn-default disabled">…</a>
                        break;
                }
            }
        </div>
        <div class="btn-toolbar-spacer"></div>
    }

    <div class="btn-toolbar-label">Total items: @Model.TotalRecordCount</div>
</div>